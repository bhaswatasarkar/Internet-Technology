package clientservermodel;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.Scanner;



public class Client{
	
	private Socket socket;
	protected BufferedReader in = null;
	protected PrintWriter out = null;
	public int clientport;
	private String name;
	
	//0 = guest(default),1 = manager
	//private int access = 0;
	
	public Client(String hostname,int port,String name){
		try{
			 this.socket = new Socket(hostname, port);
		     out = new PrintWriter(socket.getOutputStream(), true);
		     in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
		     this.clientport = socket.getLocalPort();
		     this.name = name;
		}
		catch(Exception e) {
			e.printStackTrace();
		}
	}

public static void main(String[] args) throws UnknownHostException, IOException {
		
	    int access = 0;//default is guest
		Scanner sc = new Scanner(System.in);
		String str = null;
		
		if(new String("m").equals(str.strip().toLowerCase())) {
			 System.out.print("Enter password : ");
			 str = sc.nextLine();	 
		}
		
		
			
		Client cl = new Client("localhost",5555,"Bhaswata");
		while(true) {
			System.out.println("Press M/m with password [m<blank>password] for manager access, press any other key to skip : ");
			System.out.print("$ ");
			str = sc.nextLine();
			cl.out.println("rqstpassword");
			cl.out.flush();
			if(cl.in.readLine().equals(str)) {
				System.out.println("Manager Access Granted");
				break;
			else {
					
				}
			}
		}
		
		while(!"exit".equalsIgnoreCase(str)) {
			
		}
		
		sc.close();
		

	}

}
